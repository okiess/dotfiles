unamestr=`uname`

alias ll='ls -lh'
alias la='ls -Alh'

# Git Aliases
alias gst='git status'
alias P='git push'
alias pu='git pull'
alias p='git pull'

# Docker Aliases
alias d='docker'
alias di='docker images'
alias drmi='docker rmi'
alias dc='docker compose'
alias dp='docker ps'
alias dpa='docker ps -a'

function removeDockerContainers() {
  docker rm $(docker ps -a -q)
}

# Darwin (macOS) specific aliases and functions

if [[ "$unamestr" == 'Darwin' ]]; then
  alias ls='ls --color=auto'
  alias grep='grep --color=auto'
  alias lt='eza --tree --level=2 --long --icons --git'
  alias lta='lt -a'
  alias n='nvim'

  alias j8='export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)'
  alias j11='export JAVA_HOME=$(/usr/libexec/java_home -v 11)'
  alias j25='export JAVA_HOME=$(/usr/libexec/java_home -v 25)'
  alias jversion='java -version && echo "JAVA_HOME: $JAVA_HOME"'

  function parse_git_branch {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
  }

  function inhist() {
    cat $HOME/.bash_history | grep $@
  }
fi
