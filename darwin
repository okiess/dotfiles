  export LSCOLORS=GxGxcxdxCxegedabagacad
  export CLICOLOR=1
  export PS1="$CYAN_E\w$YELLOW_E \$(parse_git_branch)$WHITE_E $\[\033[00m\] "
fi

function removeDockerContainers() {
  docker rm $(docker ps -a -q)
}

